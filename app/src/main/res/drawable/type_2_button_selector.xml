<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/colorPrimaryThirdOpacity"/>
            <corners
                android:radius="2dp"/>
        </shape>

    </item>
    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="@color/colorPrimaryThirdOpacity"/>
            <corners
                android:radius="2dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <solid
                android:angle="270"
                android:color="@color/colorPrimaryThird"/>
            <corners
                android:radius="2dp"/>
        </shape>
    </item>
</selector>
